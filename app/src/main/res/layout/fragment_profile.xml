<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ll_fragmentProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="350dp"
            app:cardBackgroundColor="@color/blue_LostForm_Title">

        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:cardCornerRadius="350dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_user_image_fragmentProfile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_profile"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_fragmentProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_user_name_fragmentProfile"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="@font/bold"
        android:textColor="@color/blue_LostForm_Title"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_fragmentProfile"/>
    <TextView
        android:id="@+id/tv_user_email_fragmentProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_user_email_fragmentProfile"
        android:textSize="18sp"
        android:gravity="center"
        android:fontFamily="@font/semibold"
        android:textColor="@color/blue_LostForm_Title"
        app:layout_constraintTop_toBottomOf="@id/tv_user_fragmentProfile"/>

    <LinearLayout
        android:id="@+id/ll2_fragmentProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_user_email_fragmentProfile"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_my_reports"
            android:text="@string/bt_my_reports_fragmentProfile"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_my_found_items"
            android:text="@string/bt_my_found_items_fragmentProfile"
            android:fontFamily="@font/bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3_fragmentProfile"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll2_fragmentProfile">
        <androidx.fragment.app.FragmentContainerView
            android:name="com.example.ifound.fragment_MyReports"
            android:id="@+id/fragment_container_fragmentProfile"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_my_reports"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>