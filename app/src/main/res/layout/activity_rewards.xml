<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#427DE4"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv_rewards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_current_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/black"
            android:text="@string/tv_current_stars"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_stars"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="end"
            android:layout_marginEnd="25dp"
            android:elevation="8dp"
            android:src="@drawable/star_3" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rewards"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="250dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="44dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="1.5dp"
            android:paddingTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_claim_reward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/black"
                    android:text="@string/tv_claim_reward"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:textColor="@color/blue_rewards_Title"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_claim_instruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:text="@string/tv_claim_instruction"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="@string/tv_select"
                    android:gravity="left"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/blue_rewards_Title"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_rewards_1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="10dp"
                    android:elevation="5dp">

                    <ImageButton
                        android:id="@+id/ibtn_rewards_1"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:contentDescription="@string/tv_rewards_1"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iacademy" />

                    <TextView
                        android:id="@+id/tv_rewards_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tv_rewards_1"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/semibold"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="130dp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_rewards_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:elevation="5dp"
                    android:layout_marginStart="30dp">

                    <ImageButton
                        android:id="@+id/ibtn_rewards_2"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/tv_rewards_2"
                        android:src="@drawable/jimini"/>

                    <TextView
                        android:id="@+id/tv_rewards_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_rewards_2"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="130dp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toBottomOf="@id/l1"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_rewards_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="10dp"
                    android:elevation="5dp">

                    <ImageButton
                        android:id="@+id/ibtn_rewards_3"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:contentDescription="@string/tv_rewards_3"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/potatocorner" />

                    <TextView
                        android:id="@+id/tv_rewards_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_rewards_3"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="135dp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_rewards_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:elevation="5dp"
                    android:layout_marginStart="30dp">

                    <ImageButton
                        android:id="@+id/ibtn_rewards_4"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:padding="0dp"
                        android:contentDescription="@string/tv_rewards_4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/coffeebeandrink"/>

                    <TextView
                        android:id="@+id/tv_rewards_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_rewards_4"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="130dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/semibold"
                android:contentDescription="@string/btn_claim_reward"
                android:text="@string/btn_claim_reward"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
