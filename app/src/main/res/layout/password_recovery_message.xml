<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_ifoundLogo"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/ifound"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_email_sent"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/email" />
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:src="@drawable/recovery"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back_to_login_pw_recovery"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_login"
            android:text="@string/btn_back_to_login"
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"
            app:layout_constraintTop_toBottomOf="@id/iv_message"/>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>