<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/ifound"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ImageView
        android:id="@+id/iv_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_books"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_cube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_cube"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/iv_books"
        app:layout_constraintStart_toStartOf="@id/iv_books"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_arc"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-60dp"
        app:layout_constraintStart_toEndOf="@+id/iv_books"
        app:layout_constraintBottom_toTopOf="@id/iv_books"/>

    <ImageView
        android:id="@+id/iv_half_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_half_ball"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_books"/>

    <ImageView
        android:id="@+id/iv_motto"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_splashscreen_motto"
        android:layout_marginTop="-30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_books"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_splashscreen_motto_two"
        android:layout_marginTop="-20dp"
        app:layout_constraintStart_toStartOf="@id/iv_motto"
        app:layout_constraintTop_toBottomOf="@id/iv_motto"/>


</androidx.constraintlayout.widget.ConstraintLayout>