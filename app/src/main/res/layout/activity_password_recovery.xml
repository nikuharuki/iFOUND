<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".PasswordRecoveryActivity">

    <ImageView
        android:id="@+id/iv_ifound_logo_pw_recovery"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/ifound"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        app:layout_constraintTop_toBottomOf="@id/iv_ifound_logo_pw_recovery">

        <ImageView
            android:id="@+id/iv_title_recover_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/contentDecription_iv1_foundItemForm"
            android:src="@drawable/recoverpassword" />

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/contentDecription_iv2_foundItemForm"
            android:src="@drawable/recover_pass" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_email"
            android:labelFor="@id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/medium"
            android:text="@string/email"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginStart="30dp" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="315dp"
            android:layout_height="53dp"
            android:layout_marginTop="12dp"
            android:includeFontPadding="true"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:autofillHints="emailAddress"
            android:textColor="#000"
            android:layout_gravity="center"
            tools:ignore="LabelFor"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="220dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_login"
            android:text="@string/txt_lost_item_form_submit_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>